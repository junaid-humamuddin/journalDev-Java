package ReadFileToString;

import java.io.BufferedReader;
import java.io.FileNotFoundException;
import java.io.FileReader;

public class ReadFileUsingBufferedReader {

	public static void main(String[] args) throws FileNotFoundException {
		String fileName = "C:/Users/junaid/testSource.txt";
		BufferedReader reader = new BufferedReader(new FileReader(fileName));
		BufferedReaderReadLine br = new BufferedReaderReadLine();
		br.bufferedReaderReadLineMethod(reader);

	}

}

class BufferedReaderReadLine {
	String bufferedReaderReadLineMethod(String fileName) {
		return fileName;

	}
}